		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.beetle-psx.so"
                   library_linux="game.libretro.beetle-psx.so"
                   library_osx="game.libretro.beetle-psx.dylib"
                   library_windx="game.libretro.beetle-psx.dll"
                   library_wingl="game.libretro.beetle-psx.dll">
		<platforms>PSX</platforms>
		<extensions>psx</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetle-psx v1.0.1</summary>
		<description>Source: https://github.com/libretro/mednafen-psx-libretro</description>
		<platform>all</platform>
